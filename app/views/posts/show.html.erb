<% title @post.title %>

<div><%= @post.body %></div>

<div class="actions">

  <% if user_signed_in? %>
    <%= link_to "Edit", edit_post_path(@post) %> |
    <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <% end %>

  <%= link_to "View All", posts_path %>
</div>
