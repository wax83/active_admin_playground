<% title @post.title %>

<section class="post">

  <h4>by <%= @post.user.email %></h4>

  <div class="post-body"><%= @post.body %></div>

  <div class="post-actions">
    <%= link_to "View All", posts_path %>
    <% if can? :manage, @post %>
      | <%= link_to "Edit", edit_post_path(@post) %>
      | <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </div>

</section>